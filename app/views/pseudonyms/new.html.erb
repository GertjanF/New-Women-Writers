<h1>Create a new pseudonym</h1>
<div class="form">
	<!-- # START:errors -->
		<%= error_messages_for :pseudonym -%>
	<!-- # END:errors -->

  <fieldset>
		<legend>Enter pseudonym details</legend>
		<% form_for :pseudonym, :url => { :action => "create" } do |form| %> 
			<%= render :partial => 'form', :object => form  %>
			<%= image_submit_tag ("accept.png", :alt => "save changes", :title => "save changes" , :class => 'image-submit') %>
			<%= link_to image_tag("cancel.png", :border=>0), :action => 'index', :title => "cancel changes"  %>
		<% end %>
  </fieldset>
</div>