<h1>Edit topos</h1>

<div class="form">
	<!-- # START:errors -->
	<%= error_messages_for :topoi -%>
	<!-- # END:errors -->

	<fieldset>
		<legend>Enter topos details</legend>
		<% form_for :topoi, :url => { 
			:action => "update", 
			:id=>@topoi.id} do |form| %> 
			
			<%= render :partial => 'form', :object => form  %>
				<%= image_submit_tag ("accept.png", :alt => "save changes", :title => "save changes" , :class => 'image-submit') %>
				<%= link_to image_tag("cancel.png", :border=>0), {:action => 'show', id=>@topoi.id}, :title => "cancel changes"  %>
		<% end %>
	</fieldset>
</div>