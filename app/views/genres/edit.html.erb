<h1>Edit genre</h1>

<div class="form">
	<!-- # START:errors -->
	<%= error_messages_for :genre -%>
	<!-- # END:errors -->

	<fieldset>
		<legend>Enter genre details</legend>
		<% form_for :genre, :url => { 
			:action => "update", 
			:id=>@genre.id} do |form| %> 
			
			<%= render :partial => 'form', :object => form  %>
				<%= image_submit_tag ("accept.png", :alt => "save changes", :title => "save changes" , :class => 'image-submit') %>
				<%= link_to image_tag("cancel.png", :border=>0), {:action => 'show', id=>@genre.id}, :title => "cancel changes"  %>
		<% end %>
	</fieldset>
</div>