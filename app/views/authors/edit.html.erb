<span class="toright">
	<%= link_to_function image_tag("help.png", :border => 0), "helpbox('authors', 'form')", {:title => 'Show/hide the help page'} %>
</span>

<h1>Edit author</h1>

<div class="details crlfsafe" id="help"><%= @help_page.help_text %></div>

<%= flash_notice %>

<div class="form">
	<!-- # START:errors -->
	<%= error_messages_for :author -%>
	<!-- # END:errors -->

	<%= flash_notice %>
	
	<fieldset>
		<legend>Enter author details</legend>
		<% form_for :author, :url => { :action => "update", :id=>@author.id }, :html=>{:name=>"formnaam"} do |form| %>

		<%= render :partial => 'form', :object => form  %>
			<%= image_submit_tag("accept.png", :alt => "save changes", :title => "save changes" , :class => 'image-submit') %>
			<%= link_to image_tag("cancel.png", :border=>0), {:action => 'show', :id => @author.id}, :title => "cancel changes"  %>
		<% end %>
	</fieldset>
</div>