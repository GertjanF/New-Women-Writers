<h1>Edit user</h1>

<div class="form">
<!-- # START:errors -->
	<%= error_messages_for :user -%>
<!-- # END:errors -->

  <fieldset>
  <legend>Enter user details</legend>
	<% form_for :user, :url => { :action => "update", :id => @user.id } do |form| %> <!-- <label id="code.rails_app.controller_views.3"/> -->
	
	<%= render :partial => 'form', :object => form  %>
	
<% if admin? %>
	<div>
		Status
		<%=form.radio_button :level, 1, :class=> "radio" %>
		<label for="user_level_1">Admin</label>
		<%=form.radio_button :level, 2, :class=> "radio" %>
		<label for="user_level_2">Editor</label>
		<%=form.radio_button :level, 3, :class=> "radio" %>
		<label for="user_level_3">Registered</label>
	</div>
<% end %>
	
		<%= image_submit_tag ("accept.png", :alt => "save changes", :title => "save changes" , :class => 'image-submit') %>
		<%= link_to image_tag("cancel.png", :border=>0), {:action => 'index'}, :title => "cancel changes"  %>

		<!--%= submit_tag "Create", :class => "submit" %-->
		<!--%= link_to "cancel", { :action => "index" }, :class => "cancel" %-->
  <% end %>
  </fieldset>
</div>